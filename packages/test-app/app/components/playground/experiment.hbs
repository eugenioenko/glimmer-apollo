<h2>
  User Info
</h2>

loading:
{{this.userInfo.loading}}
<br />
firstName:
{{this.userInfo.data.user.firstName}}

{{#if this.userInfo.error}}
  Error:
  {{this.userInfo.error.message}}
{{/if}}
<button
  type="button"
  {{on "click" this.userInfo.refetch}}
  data-test-id="experiment-user-refetch"
>
  refetch
</button>
<div {{did-update this.onDidUpdate this.userInfo.data}}></div>
<hr />
<h2>
  Login
</h2>
<button type="button" {{on "click" this.bla}}>
  Login
</button>

<br />
loading:
{{this.login.loading}}

<br />
firstName:
{{this.login.data.login.firstName}}

{{#if this.login.error}}
  Error:
  {{this.login.error.message}}
{{/if}}
<hr />
<h2>
  Colors
</h2>
<button
  type="button"
  {{on "click" this.colorsQuery.refetch}}
  data-test-id="colors-refetch"
>
  refetch
</button>
{{#each this.colorsQuery.data.colors as |color|}}
  <button
    type="button"
    data-test-id="color-{{color.id}}"
    {{on "click" (fn this.onUpdateColor color.id color.color)}}
  >
    {{color.color}}
  </button>
{{else}}
  loading
{{/each}}